{
    "ConnectionStrings": {
        "DefaultConnection": "Host=postgres;Database=mirthgraph;Username=postgres;Password=mirthgraph",
        "RedisConnection": "redis:6379"
    },
    "AllowedHosts": "*",
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}